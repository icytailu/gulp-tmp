@import './variable.styl'

.img-box
  font-size 0

  .img
    width 100%
    height 100%
    object-fit cover

.icon-box
  position relative
  font-size 0

  .icon
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    max-width 100%
    max-height 100%

// 背景图片
bg-img($url)
  background-image url($url + '@2x.png') no-repeat

  @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
    background-image url($url + '@3x.png') no-repeat