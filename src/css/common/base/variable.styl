// 字体
$font-family = -apple-system, system-ui, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif
// 背景
$background-regular = #f7f7f7
$background-theme = #ddd
$background-sub-theme = #bbb
// 字体颜色
$color-regular = #333
$color-theme = #077af1
$color-sub-theme = #d93f30
// 边框
$border-color = #ddd
// 分界线
$single-border-color = #eee
// 圆角
$border-radius = 4px
// 输入框
$input-placeholder-color = #bbb
// 阴影
$box-shadow = 0px 9px 18px 0px rgba(0, 0, 0, 0.04)
// 字体大小
$fs12 = 0.75rem
$fs14 = 0.875rem
$fs16 = 1rem
$fs17 = 1.0625rem
$fs18 = 1.125rem
$fs20 = 1.25rem
$fs21 = 1.3125rem
$fs22 = 1.375rem
$fs23 = 1.4375rem
$fs24 = 1.5rem
$fs25 = 1.5625rem
$fs26 = 1.625rem
$fs34 = 2.125rem
$fs30 = 1.875rem
$fs40 = 2.5rem
$fs50 = 3.125rem