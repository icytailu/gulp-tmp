@import './variable.styl'

/**
 * 1. Correct the line height in all browsers.
 * 2. Prevent adjustments of font size after orientation changes in iOS.
 */
html, body
  font-family $font-family
  scroll-behavior smooth
  line-height 1.15
  -webkit-text-size-adjust 100%
  -webkit-overflow-scrolling touch
  -webkit-tap-highlight-color transparent

::-webkit-input-placeholder
  color $input-placeholder-color

::-moz-placeholder
  color $input-placeholder-color

::-moz-placeholder
  color $input-placeholder-color

::-ms-input-placeholder
  color $input-placeholder-color

textarea, input
  -webkit-appearance none

.fb
  font-weight bold

.dfr
  display flex
  flex-direction row

.dfc
  display flex
  flex-direction column

.flex-center
  align-items center
  justify-content center

.t-c
  text-align center

.t-r
  text-align right

.t-l
  text-align left

.pointer
  cursor pointer

.shadow
  box-shadow $box-shadow

.border
  border 0.01rem solid $border-color

.bs
  border-radius $border-radius

.b-n
  border none !important

/* border在手机端显示1像素 */
.l-t
  border-top 0.01rem solid $single-border-color

.l-r
  border-right 0.01rem solid $single-border-color

.l-l
  border-bottom 0.01rem solid $single-border-color

.l-b
  border-left 0.01rem solid $single-border-color

/* 颜色定义 */
